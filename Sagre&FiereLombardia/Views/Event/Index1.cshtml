@{
    var listaComuni = ViewBag.listaComuni as List<string>;
    var listaRisultati = ViewBag.filteredEvents as List<Event>;
}

@if (listaComuni != null && listaComuni.Any())
{
    <form asp-action="OnComuneSelezionato" method="get"> 
        @foreach (string comune in listaComuni)
        {
            <button type="submit">@comune</button>
        }
    </form>
}

<form asp-action="Index" method="get">
    <input name="filterComune" id="filterComune" />
    <button type="submit">Filtra</button>
</form>